  { name: "@yogyyconst", url: "https://x.com/yogyyconst" },
  { name: "email", url: "mailto:m.yogi.fs@gmail.com" },
  { name: "linkedin", url: "https://www.linkedin.com/in/yogyy" },
  { name: "github", url: "https://github.com/yogyy" },

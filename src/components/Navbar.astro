---
import { cn } from "@/lib/utils";

const navlink = [
  { name: "home", link: "yogyy.vercel.app" },
  { name: "blog", link: "yogyy.vercel.app/posts" },
  { name: "guestbook", link: "burungbiru.vercel.app" },
];
const { className } = Astro.props;
---

<nav class={cn("mb-16 w-fit text-sm font-medium", className)}>
  <ul class="flex flex-row gap-3">
    {
      navlink.map((nav, i) => (
        <li>
          <a class="relative" href={`https://${nav.link}`} target="_blank">
            {nav.name}
            {i === 0 && (
              <div class="absolute inset-0 top-5 h-[1px] w-full bg-gradient-to-r from-transparent to-white" />
            )}
          </a>
        </li>
      ))
    }
  </ul>
</nav>
